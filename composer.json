{
    "name": "antonioprimera/php-helpers",
    "description": "A lightweight set of php helpers, providing some missing or hard to achieve functionality, without the need to import some larger packages",
    "keywords": [
        "antonioprimera",
        "php-helpers"
    ],
    "homepage": "https://github.com/antonioprimera/php-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonio Primera",
            "email": "antonio@cus.ro",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "AntonioPrimera\\PhpHelpers\\": "src"
        },
        "files": [
            "src/stringHelpers.php",
            "src/arrayHelpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AntonioPrimera\\PhpHelpers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
